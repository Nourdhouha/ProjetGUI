<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.voyageaffaires.controllers.UserFormController"
            prefHeight="500.0" prefWidth="500.0">
    
    <stylesheets>
        <java.lang.String fx:value="/css/style.css"/>
    </stylesheets>
    
    <center>
        <VBox spacing="20.0" style="-fx-background-color: white;">
            <padding>
                <Insets top="30.0" right="40.0" bottom="30.0" left="40.0"/>
            </padding>
            
            <!-- Title -->
            <Label fx:id="titleLabel" text="Ajouter un Utilisateur" 
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
            
            <Separator/>
            
            <!-- Form Fields -->
            <GridPane hgap="15.0" vgap="15.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" prefWidth="120.0"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="250.0"/>
                </columnConstraints>
                
                <!-- Nom -->
                <Label text="Nom *" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="nomField" promptText="Nom de famille" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                
                <!-- Prénom -->
                <Label text="Prénom *" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="prenomField" promptText="Prénom" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                
                <!-- Email -->
                <Label text="Email *" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="emailField" promptText="exemple@email.com" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                
                <!-- Téléphone -->
                <Label text="Téléphone" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <TextField fx:id="telephoneField" promptText="20123456"/>
                    <Label text="Format: 8 chiffres (ex: 20123456) ou +216xxxxxxxx (optionnel)" 
                           style="-fx-text-fill: #64748b; -fx-font-size: 10px;"/>
                </VBox>
                
                <!-- Département -->
                <Label text="Département" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="departementField" promptText="IT, RH, Commercial..." GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                
                <!-- Mot de passe (only for new users) -->
                <Label fx:id="passwordLabel" text="Mot de passe *" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <PasswordField fx:id="passwordField" promptText="Minimum 6 caractères" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                
                <!-- Rôle -->
                <Label text="Rôle *" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <ComboBox fx:id="roleComboBox" promptText="Sélectionner un rôle" 
                         GridPane.columnIndex="1" GridPane.rowIndex="6" maxWidth="Infinity"/>
                
                <!-- Actif -->
                <Label text="Actif" styleClass="field-label" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                <CheckBox fx:id="actifCheckBox" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
            </GridPane>
            
            <!-- Error Label -->
            <Label fx:id="errorLabel" textFill="red" wrapText="true" visible="false"
                   style="-fx-font-size: 12px;"/>
            
            <!-- Info Text -->
            <Label text="* Champs obligatoires" style="-fx-text-fill: #64748b; -fx-font-size: 11px;"/>
            
            <!-- Action Buttons -->
            <HBox spacing="15.0" alignment="CENTER_RIGHT">
                <Button text="Annuler" onAction="#handleCancel" styleClass="secondary-button">
                    <padding>
                        <Insets top="10.0" right="20.0" bottom="10.0" left="20.0"/>
                    </padding>
                </Button>
                
                <Button fx:id="saveButton" text="Enregistrer" onAction="#handleSave" styleClass="primary-button">
                    <padding>
                        <Insets top="10.0" right="20.0" bottom="10.0" left="20.0"/>
                    </padding>
                </Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>
