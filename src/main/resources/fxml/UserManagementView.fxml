<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.voyageaffaires.controllers.UserManagementController"
            prefHeight="800.0" prefWidth="1280.0">
    
    <stylesheets>
        <java.lang.String fx:value="/css/style.css"/>
    </stylesheets>
    
    <top>
        <HBox styleClass="header" alignment="CENTER_LEFT" spacing="20.0">
            <padding>
                <Insets top="15.0" right="30.0" bottom="15.0" left="30.0"/>
            </padding>
            
            <Button text="← Retour" onAction="#goBack" styleClass="secondary-button">
                <padding>
                    <Insets top="8.0" right="15.0" bottom="8.0" left="15.0"/>
                </padding>
            </Button>
            
            <Label text="Gestion des Utilisateurs" styleClass="header-title"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <Button fx:id="btnAddUser" text="+ Ajouter un Utilisateur" onAction="#handleAddUser" 
                    styleClass="primary-button">
                <padding>
                    <Insets top="10.0" right="20.0" bottom="10.0" left="20.0"/>
                </padding>
            </Button>
        </HBox>
    </top>
    
    <center>
        <VBox styleClass="content-area" spacing="20.0">
            <padding>
                <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
            </padding>
            
            <!-- Search Bar -->
            <HBox spacing="15.0" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Rechercher par nom, email..." 
                          prefWidth="400.0" styleClass="text-field"/>
                <Button text="Rechercher" onAction="#handleSearch" styleClass="primary-button">
                    <padding>
                        <Insets top="10.0" right="20.0" bottom="10.0" left="20.0"/>
                    </padding>
                </Button>
                <Button text="Réinitialiser" onAction="#handleReset" styleClass="secondary-button">
                    <padding>
                        <Insets top="10.0" right="20.0" bottom="10.0" left="20.0"/>
                    </padding>
                </Button>
            </HBox>
            
            <!-- Users Table -->
            <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60.0"/>
                    <TableColumn fx:id="colNom" text="Nom" prefWidth="150.0"/>
                    <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="150.0"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="200.0"/>
                    <TableColumn fx:id="colTelephone" text="Téléphone" prefWidth="130.0"/>
                    <TableColumn fx:id="colDepartement" text="Département" prefWidth="150.0"/>
                    <TableColumn fx:id="colRole" text="Rôle" prefWidth="100.0"/>
                    <TableColumn fx:id="colActions" text="Actions" prefWidth="200.0"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
